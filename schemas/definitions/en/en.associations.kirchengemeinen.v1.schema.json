{
  "schema_id": "en.associations.church.v1",
  "version": 1,
  "fields": {
    "name": {
      "type": "string",
      "required": true
    },
    "pastor": {
      "type": "string"
    },
    "address": {
      "type": "table",
      "required": true,
      "fields": {
        "street": {
          "type": "string",
          "required": true
        },
        "house_number": {
          "type": "string"
        },
        "postal_code": {
          "type": "string",
          "required": true
        },
        "city": {
          "type": "string",
          "required": true
        },
        "country": {
          "type": "string",
          "default": "DE"
        }
      }
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string"
    },
    "website": {
      "type": "string"
    },
    "denomination": {
      "type": "string",
      "required": true
    },
    "gottesdienstzeiten": {
      "type": "table",
      "required": true,
      "fields": {
        "sunday": {
          "type": "string",
          "required": true
        },
        "wednesday": {
          "type": "string"
        }
      }
    },
    "offers": {
      "type": "[string]"
    },
    "seelsorge_telefon": {
      "type": "string"
    },
    "buero_oeffnungszeiten": {
      "type": "string"
    },
    "wheelchair_accessible": {
      "type": "bool"
    },
    "gemeindebrief_online": {
      "type": "bool"
    },
    "short_description": {
      "type": "string"
    }
  }
}
