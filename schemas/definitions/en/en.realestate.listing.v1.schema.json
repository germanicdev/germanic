        "heizungsart": {
          "type": "string",
          "required": false
        }
      }
    },
    "available_from": {
      "type": "string",
      "required": false
    },
    "haustiere_erlaubt": {
      "type": "bool",
      "required": false,
      "default": "false"
    },
    "ansprechpartner_name": {
      "type": "string",
      "required": false
    },
    "ansprechpartner_telefon": {
      "type": "string",
      "required": true
    },
    "ansprechpartner_email": {
      "type": "string",
      "required": false
    },
    "expose_url": {
      "type": "string",
      "required": false
    },
    "features": {
      "type": "[string]",
      "required": false
    },
    "short_description": {
      "type": "string",
      "required": false
    }
  }
}
