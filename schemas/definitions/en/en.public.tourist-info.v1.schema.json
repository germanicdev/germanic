{
  "schema_id": "en.public.tourist-info.v1",
  "version": 1,
  "fields": {
    "name": {
      "type": "string",
      "required": true
    },
    "operator": {
      "type": "string"
    },
    "address": {
      "type": "table",
      "required": true,
      "fields": {
        "street": {
          "type": "string",
          "required": true
        },
        "house_number": {
          "type": "string"
        },
        "postal_code": {
          "type": "string",
          "required": true
        },
        "city": {
          "type": "string",
          "required": true
        },
        "country": {
          "type": "string",
          "default": "DE"
        }
      }
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string"
    },
    "website": {
      "type": "string"
    },
    "offers": {
      "type": "[string]",
      "required": true
    },
    "languages": {
      "type": "[string]"
    },
    "opening_hours": {
      "type": "string",
      "required": true
    },
    "wheelchair_accessible": {
      "type": "bool"
    },
    "wifi": {
      "type": "bool"
    },
    "short_description": {
      "type": "string"
    }
  }
}
